<table class="apadana-table module-counter" cellpadding="0" cellspacing="0">
<thead>
<tr>
	<th style="width:20px">عکس</th>
	<th style="width:100px">نام خزنده</th>
	<th>نمودار</th>
	<th style="width:20px">تعداد</th>
</tr>
</thead>
<tbody>[for robot]
<tr class="{odd-even}">
	<td><img src="modules/counter/images/robots/{icon}" alt="robot {name}" /></td>
	<td dir="ltr">{name}</td>
	<td><div class="progress progress-{progress}"><span style="width: {percent}%;"><b>{percent}%</b></span></div></td>
	<td>{count}</td>
</tr>[/for robot]
</tbody>
</table>
